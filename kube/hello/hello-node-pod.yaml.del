apiVersion: v1
kind: Pod
metadata:
  name: hello-node-pod
  labels:
    # リソース分別のためのKey-Value
    # どんな名前でも良いが、分類に注意
    label: hello-app
  annotations:
    # ただのKey-Value(正式運用前の設定に使うなど用途は色々)
    annotation1: hello
    anno2: test
spec:
  # こうも書ける
  # containers: [{name: nginx-container, image: nginx:1.13}]
  containers:
    - name: node-container
      image: localhost:5000/peke2/hello_node_server
